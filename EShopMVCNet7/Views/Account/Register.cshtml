
@model AppUser
@section scripts{
    <partial name="_Validation" />
}
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h2>Đăng kí tài khoản</h2>
            <!--asp-validation-summary để hiển thị lỗi thẻ div mới sài đc-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-3">
                <label class="form-label">Tên đăng nhập</label>
                <input asp-for="Username" class="form-control" /> <!--asp-for để cho data đc gửi thằng vào nó-->
                <span asp-validation-for="Username" class="text-danger fst-italic"></span>
            </div>
            <div class="mt-3">
                <label class="form-label">Mật khẩu</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger fst-italic"></span>
            </div>
            <div class="mt-3">
                <label class="form-label">Nhập lại mật khẩu</label>
                <input type="password" asp-for="Cfm_Password" class="form-control" />
                <span asp-validation-for="Cfm_Password" class="text-danger fst-italic"></span>
            </div>
            <div class="mt-3">
                <label class="form-label">Số điện thoại</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger fst-italic"></span>
            </div>
            <div class="mt-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger fst-italic"></span>
            </div>
            <div class="mt-3">
                <label class="form-label">Địa chỉ</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger fst-italic"></span>
            </div>
            <div class="mt-3">
                <input type="submit" class="btn btn-warning" value="Đăng kí tài khoản" />
            </div>
        </form>
    </div>
</div>