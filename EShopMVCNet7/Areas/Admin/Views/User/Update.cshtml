@model EShopMVCNet7.Models.AppUser

@{
    ViewData["Title"] = "Update";
}
@section scripts{
    <partial name="_Validation" />
}

<h1>Update</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-3">
                <label asp-for="Username" class="control-label">Tên đăng nhập</label>
                <input class="form-control" value="@Model.Username" disabled />
            </div>
            <div class="mt-3">
                <label class="control-label">
                    <input asp-for="Role" value="@UserRole.ROLEADMIN" type="radio" />
                    Admin
                </label>
                <label class="control-label">
                    <input asp-for="Role" value="@UserRole.ROLECUSTOMER" type="radio" />
                    Khách hàng
                </label>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <input type="submit" value="Cập nhật" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Danh sách</a>
</div>

